<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:sam='urn:import:org.savara.gadget.web.client.widgets'>

    <g:DecoratorPanel>
        <g:HorizontalPanel>
            <g:VerticalPanel>
               <g:Image ui:field="itemImage">
               </g:Image>
               <g:Button text="Add To Page" ui:field="addBtn">
               </g:Button>
            </g:VerticalPanel>

            <g:VerticalPanel>
                <g:Label ui:field="itemName"></g:Label>
                <g:Label ui:field="itemDesc"></g:Label>
            </g:VerticalPanel>
        </g:HorizontalPanel>
    </g:DecoratorPanel>

</ui:UiBinder>