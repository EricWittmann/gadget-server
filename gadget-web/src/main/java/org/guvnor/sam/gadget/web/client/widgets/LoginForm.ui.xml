<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel>
        <div ui:field="loginForm" title="Gadget Server">
             <table>
                 <tr>
                     <td colspan="2"><g:Label ui:field="loginError" styleName="red-error"></g:Label></td>
                 </tr>
                 <tr>
                     <td>Username:</td>
                     <td><g:TextBox ui:field="username"></g:TextBox> </td>
                 </tr>
                 <tr>
                     <td>Password:</td>
                     <td><g:PasswordTextBox ui:field="password"></g:PasswordTextBox></td>
                 </tr>
             </table>
        </div>
        <div ui:field="signupForm" title="Signup">
            <table>
                <tr>
                    <td colspan="2"><g:Label ui:field="signupError" styleName="red-error"></g:Label></td>
                </tr>
                <tr>
                    <td>Username:</td>
                    <td><g:TextBox ui:field="signupUsername"></g:TextBox> </td>
                </tr>
                <tr>
                    <td>Password:</td>
                    <td><g:PasswordTextBox ui:field="signupPassword"></g:PasswordTextBox></td>
                </tr>
                <tr>
                    <td>Confirm Password:</td>
                    <td><g:PasswordTextBox ui:field="signupConfirmPassword"></g:PasswordTextBox></td>
                </tr>
                <tr>
                    <td>Email:</td>
                    <td><g:TextBox ui:field="email"></g:TextBox></td>
                </tr>
                <tr>
                    <td>Display Name:</td>
                    <td><g:TextBox ui:field="displayName"></g:TextBox></td>
                </tr>
            </table>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>